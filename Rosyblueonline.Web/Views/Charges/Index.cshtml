@model List<mstChargesModel>
@{
    ViewBag.Title = "Change summary discounts";
}
@section header{
}
<div class="content-wrapper">
    <section class="content">
        <div id="uiPanel1"></div>
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <section class="dash-box mt-10">
                        <div class="dash-head">
                            @Resource.Change_summary_Discounts
                        </div>
                        <div class="dash-inner">
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="frmCharges" class="customers-info">
                                        <div class="form-horizontal">
                                            @for (int i = 0; i < Model.Count; i++)
                                            {
                                                <div class="form-group">
                                                    <div class="col-lg-4"><label class="control-label"><label>@Model[i].chargesName:</label></label></div>
                                                    <div class="col-lg-6"><input name="@Model[i].InputName" class="form-control" type="text" value="@Model[i].chargesValue" data-validation="@(Model[i].chargesType==2?"Fixed":"Percent")" required></div>
                                                </div>
                                            }
                                        </div>
                                        <div class="text-center">
                                            <button type="button" class="btn btn-primary" id="btnUpdate">@Resource.Update</button>
                                        </div>
                                    </form>
                                </div>
                            </div>

                        </div>
                    </section>
                </div>

            </div>
        </div>

    </section>
</div>
@section script{
    <script type="text/javascript" src="~/Scripts/custom/Service/ServiceMethods.js"></script>
    <script type="text/javascript" src="~/Scripts/custom/Controller/CtrlCharges.js"></script>
}

