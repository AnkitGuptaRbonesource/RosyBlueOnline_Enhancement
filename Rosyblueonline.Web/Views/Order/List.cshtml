@{
    ViewBag.Title = "Order Listing";
    Rosyblueonline.Models.TokenLogModel objToken = Session["Token"] as Rosyblueonline.Models.TokenLogModel;
}
@section header{
    @Styles.Render("~/bundles/DataTable/Style")
    <link href="~/Content/css/select2.min.css" rel="stylesheet" />
}
<div class="content-wrapper">
    <section class="content">
        <div id="uiPanel1"></div>
        <section class="content">
            <div class="row">
                <div class="customers-list-table">
                    <div class="customers-list-table">
                        <div class="col-md-12">
                            <div class="panel panel-primary">
                                <div class="panel-heading">
                                    <div class="panel-heading">My Order</div>
                                </div>
                                <div class="panel-body paneltable">
                                    <div class="col-md-12">
                                        <div class="col-md-2">
                                            @if (objToken != null && (objToken.RoleID == 8 || objToken.RoleID == 9 || objToken.RoleID == 2))
                                            {
                                                <button class="btn btn-info" id="btnMergerOrder" style="display:none;">Merge Order</button>
                                            }
                                        </div>
                                        @{
                                            if (objToken != null && (objToken.RoleID == 8 || objToken.RoleID == 9 || objToken.RoleID == 2))
                                            {
                                                <div class="col-md-5">
                                                    <div class="form-horizontal">
                                                        <label class="col-md-3 control-label">
                                                            Customer
                                                        </label>
                                                        <div class="col-md-7">
                                                            <select id="ddlCustomer" name="CustomerID" class="form-control"></select>
                                                        </div>
                                                        <div class="col-md-1">
                                                            <button class="btn btn-primary btn-sm" id="btnClearCustomer"><i class="fa fa-times"></i></button>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        }
                                        <div class="col-md-5">
                                            <div class="form-horizontal">
                                                <div class="form-group">
                                                    <label class="col-md-4 control-label">
                                                        Order Status
                                                    </label>
                                                    <div class="col-md-8">
                                                        <select id="ddlStatus" class="form-control">
                                                            <option value="Pending" selected>Pending</option>
                                                            <option value="Completed">Completed</option>
                                                        </select>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="paneltable">
                                            <table id="tblOrders" class="table table-fixed dataTable no-footer">
                                                <thead class="bordertp">
                                                    <tr role="row" class="table-head">
                                                        <th class="tbnew">
                                                            <label>#</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Order ID</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Created Date</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Status</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Amount</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Customer</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Company</label>
                                                        </th>
                                                        <th class="tbnew">
                                                            <label>Actions</label>
                                                        </th>
                                                    </tr>
                                                </thead>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>

</div>
@section script{
    @Scripts.Render("~/bundles/DataTable/Script")
    <script type="text/javascript" src="~/Scripts/custom/rbDataTable.js"></script>
    <script type="text/javascript" src="~/Scripts/select2.min.js"></script>
    <script type="text/javascript" src="~/Scripts/custom/Controller/CtrlOrderListing.js"></script>
}



