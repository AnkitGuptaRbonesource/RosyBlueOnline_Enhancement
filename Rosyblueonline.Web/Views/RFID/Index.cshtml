@{
    ViewBag.Title = "RFID Search";
    Rosyblueonline.Models.TokenLogModel objToken = Session["Token"] as Rosyblueonline.Models.TokenLogModel;
}
@section header{

}
<div class="content-wrapper">
    <section class="content">
        <div id="uiPanel1"></div>
        <section class="container-fluid">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-12" >
                    <div class="dash-box mt-10">
                        <div class="dash-head">
                            @Resource.RFID_Search
                        </div>
                        <div class="dash-inner">
                            <div class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-3">@Resource.Machine</label>
                                    <div class="col-sm-9">
                                        <select id="ddlipaddress" class="form-control">
                                            <option value="192.168.20.121">RFID_1</option>
                                            <option value="192.168.20.122">RFID_2</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3">@Resource.Rfid_Number</label>
                                    <div class="col-sm-9">
                                        <textarea id="list" name="Command" class="form-control"></textarea>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3">@Resource.Total_RFID_Count</label>
                                    <div class="col-sm-9">
                                        <div id="count"></div>
                                        <div id="rfidtotalCount"></div>
                                        <div id="summary"></div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <label class="col-sm-3">@Resource.Recent_RFID_Count</label>
                                    <div class="col-sm-9">
                                        <div id="notify"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center form-inline white-no">
                                <button id="btnScanRF" class="btn btn-primary">@Resource.Scan</button>
                                <form class="d-inline-block" action="/Inventory/SpecificSearchPost" method="post">
                                    <button id="btnFormSubmit" type="submit" style="display:none;"></button>
                                    <button id="btnSearch" type="button" class="btn btn-primary ml-10"">@Resource.Search</button>
                                    <button id="btnReset" type="reset" class="btn btn-default">@Resource.Reset1</button>
                                    <input id="hdnrfID" value="" name="Query" style="" type="hidden" />
                                </form>
                                <button id="btnRecycle" value="recycle" class="btn btn-warning ml-10"">@Resource.Recycle_RFID</button>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </section>

</div>

@section script{
    <script src="~/Scripts/spacecode.js"></script>
    <script src="~/Scripts/custom/Controller/CtrlRFIDSearch.js"></script>
    @*<script src="~/Scripts/custom/Controller/CtrlRFIDUpdate.js"></script>*@
}



