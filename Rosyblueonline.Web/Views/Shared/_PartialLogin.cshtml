<form class="login-box clearfix">
    <h3 class="login-title">@Resource.Login</h3>
    <div class="white-bg clearfix">
        <div>
            <input type="text" class="login-input" name="Username" placeholder="@Resource.User_Name" />
            <input type="password" class="login-input" name="Password" placeholder="@Resource.Password" />
        </div>
        <div class="row">
            <div class="col-xs-6">
                <input type="submit" class="btn btn-primary btn-login" value="@Resource.Login" />
            </div>
            <div class="col-xs-6 text-right">
                <a href="#" class="forgot-pass" id="ancFP">@Resource.Forget_Password</a>
            </div>
        </div>
        <div class="newuser-block text-center mt-20">
            <a href="/Home/Registration">@Resource.New_UserPlease_Register_Here</a>
        </div>
    </div>

</form>

